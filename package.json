{
  "name": "book-package-reader",
  "private": true,
  "version": "0.0.0",
  "main": "dist-electron/main/main.js",
  "build": {
    "appId": "com.example.bookpackagereader",
    "productName": "Book Package Reader",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "mac": {
      "artifactName": "${productName}-${version}-Mac.${ext}"
    },
    "win": {
      "artifactName": "${productName}-${version}-Win.${ext}"
    },
    "linux": {
      "artifactName": "${productName}-${version}-Linux.${ext}"
    }
  },
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on tcp:5173 && tsc -p tsconfig.electron.json && cross-env NODE_ENV=development electron .",
    "build": "tsc -p tsconfig.electron.json && vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@react-pdf/renderer": "^4.3.1",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "electron-squirrel-startup": "^1.0.1",
    "fs-extra": "^11.3.2",
    "papaparse": "^5.5.3",
    "pdfmake": "^0.2.20",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1",
    "usfm-js": "^3.4.3",
    "uw-quote-helpers": "^1.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/adm-zip": "^0.5.7",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.1",
    "@types/papaparse": "^5.5.0",
    "@types/pdfmake": "^0.2.12",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  }
}
